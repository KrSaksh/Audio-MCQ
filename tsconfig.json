{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"lib": ["dom", "es6", "es2017"],
		"allowJs": true,
		"jsx": "react",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
